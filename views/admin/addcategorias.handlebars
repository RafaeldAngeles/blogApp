{{#each erros}}
    <div class="alert alert-danger"> {{texto}} </div>
{{/each}}

<h2>Adicionar Categoria</h2>
<form action="/admin/categorias/nova" method="POST" >
    <div class="form-group">
        <label for="nome">Nome da Categoria</label>
        <input type="text" name="nome" id="nome" class="form-control" placeholder="Digite o nome">
    </div>
    <div class="form-group mt-4">
        <label for="slug">Slug da Categoria</label>
        <input type="text" name="slug" id="slug" class="form-control" placeholder="Digite o slug">
    </div>
    <button type="submit" class="btn btn-success mt-4">Salvar</button>
</form>
